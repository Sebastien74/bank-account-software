{% extends "admin/base.html.twig" %}

{% trans_default_domain 'admin' %}

{% set excludes = ['save', 'saveEdit', 'saveBack', '_token', 'timer', 'width'] %}
{% set hideRadius = interface.configuration.saveArea is not defined or interface.configuration.saveArea != 'bottom' or configFields is defined and configFields %}
{% set haveCustomLayout = entity.customLayout is defined and entity.customLayout and entity.layout.id is defined and entity.layout.id %}
{% set transDomain = interface.name is defined and interface.name
    ? 'entity_'~interface.name : null %}

{% if pageTitle is not defined or pageTitle is defined and not pageTitle  %}
    {% set title = 'singular'|trans([], transDomain) and 'singular'|trans([], transDomain) != 'singular'
        ? 'singular'|trans([], transDomain) : 'Ã‰dition'|trans~" "~interface.name  %}
    {% set pageTitle = entity.adminName is defined and entity.adminName ? title~' : '~entity.adminName : title %}
{% endif %}

{% block title %}{{ pageTitle|htmlEntities }}{% endblock %}
{% block pageTitle %}{{ pageTitle|truncate(50, false) }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block body %}
    {{ form_start(form, {attr: {
        novalidate: "novalidate",
        action: app.request.uri,
        class: 'master-form position-relative',
        id: 'form-'~entity.id }}) }}
        <div id="edit-form-{{ interface.name }}" class="card refer-preloader">
            {% include 'admin/include/stripe-preloader.html.twig' with {preloaderId: 'edit-card-preloader', full: true} only %}
            {% include 'admin/core/form/save/header.html.twig' %}
            <div class="card-body pb-0{% if not hideRadius %} top-radius{% endif %}">
                <div class="row">
                    <div class="col-md-8">
                        <div class="row">
                            {% for field in form.children %}
                                {% if field.vars.name not in excludes %}
                                    {% if field.vars.name != 'mediaRelations' %}
                                        {% if field.vars.name == 'intls' %}
                                            {% include 'admin/core/form/intls.html.twig' with {intls: form.intls} %}
                                        {% else %}
                                            {{ form_row(form[field.vars.name]) }}
                                        {% endif %}
                                    {% endif %}
                                {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                    <div class="col-md-4">
                        {% include 'admin/core/form/media-relations-uniq.html.twig' with {mediaRelations: form.mediaRelations, onlyMedia: true} %}
                        <h4 class="card-subtitle mb-4 media-subtitle">
                            {{ 'fal cog'|icon(null, 14, 'info-darken me-2') }}{{ "Configuration"|trans }}
                        </h4>
                        {{ form_row(form.timer) }}
                        {{ form_row(form.width) }}
                    </div>
                </div>
            </div>
            {% include 'admin/core/form/save/footer.html.twig' %}
        </div>
    {{ form_end(form) }}
{% endblock %}