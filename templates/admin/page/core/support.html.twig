{% extends "admin/base.html.twig" %}

{% trans_default_domain 'admin' %}

{% set pageTitle = "Support"|trans %}
{% set pageIcon = 'fal headset' %}

{% block title %}{{ pageTitle|htmlEntities }}{% endblock %}
{% block pageTitle %}{{ pageTitle }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block body %}

    <div id="support-page" class="row">

        <div class="col-xl-8 mb-0 mb-sm-3">
            <div class="card h-100">
                <h4 class="card-title card-header">{{ 'fal info'|icon(null, 18, 'info-darken me-2 float-start') }}{{ "Coordonnées"|trans }}</h4>
                <div class="card-body pb-0">
                    <div class="row xs-center sm-center">
                        <div class="col-12 col-md-7 col-xl-6 mb-3">
                            <div class="logo-wrap me-2 float-start">
                                <a href="https://www.felix-creation.fr" class="bold text-info-darken" target="_blank" rel="noopener noreferrer">
                                    <img data-src="{{ asset('build/admin/images/theme/felix-logo.svg', 'admin') }}"
                                         src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="
                                         alt="{{ "Agence Félix"|trans }}" title="{{ "Agence Félix"|trans|striptags }}"
                                         width="80" height="80"
                                         class="img-fluid lazy-load" />
                                </a>
                            </div>
                            <div class="adress-wrap float-start">
                                <a href="https://www.felix-creation.fr" class="bold text-info-darken" target="_blank" rel="noopener noreferrer">{{ "Agence Félix - Agence de Publicité"|trans }}</a><br>
                                {{ "4BIS Avenue du Pont de Tasset <br/> 74960 Cran-Gevrier / Annecy <br/> FRANCE"|trans|raw }}
                            </div>
                        </div>
                        <ul class="reset ps-3 col-8 col-md-5 col-xl-3 mb-3">
                            <li class="mb-1">
                                <span class="d-inline-block i-square me-1 float-start"><span title="{{ "Phone"|trans }}" data-toogle="tooltip">{{ 'fas phone'|icon(10, 10, 'white') }}</span></span>
                                <a href="tel:+33450671855" class="text-dark">+33 (0)4 50 67 18 55</a>
                            </li>
                            <li class="mb-1">
                                <span class="d-inline-block i-square me-1 float-start"><span title="{{ "Fax"|trans }}" data-toogle="tooltip">{{ 'fas fax'|icon(10, 10, 'white') }}</span></span>
                                +33 (0)4 50 67 16 85
                            </li>
                            <li>
                                <span class="d-inline-block i-square me-1 float-start"><span title="{{ "Email"|trans }}" data-toogle="tooltip">{{ 'fas at'|icon(10, 10, 'white') }}</span></span>
                                <a href="mailto:support@agence-felix.fr" class="text-dark">support@agence-felix.fr</a>
                            </li>
                        </ul>
                        <div class="col-4 col-xl-3 mb-3">
                            <ul id="socials-list" class="reset text-end">
                                <li class="d-inline-block">
                                    <a href="https://www.facebook.com/agencefelix" target="_blank" class="me-1">
                                        {{ 'cms facebook-rounded-back'|icon(30, 30, 'info') }}
                                    </a>
                                </li>
                                <li class="d-inline-block">
                                    <a href="https://twitter.com/agencefelix" target="_blank" class="me-1">
                                        {{ 'cms twitter-rounded-back'|icon(30, 30, 'info') }}
                                    </a>
                                </li>
                                <li class="d-inline-block">
                                    <a href="https://www.youtube.com/user/felixcreation" target="_blank">
                                        {{ 'cms youtube-rounded-back'|icon(30, 30, 'info') }}
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-12">
                            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2775.9806858349716!2d6.09690731595985!3d45.911695979108885!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x478b853fc1e8228b%3A0x944c714ef3a6988f!2sAgence%20F%C3%A9lix!5e0!3m2!1sfr!2sfr!4v1569606199378!5m2!1sfr!2sfr"
                                    width="100%"
                                    height="350"
                                    style="border:0;"
                                    allowfullscreen=""></iframe>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 mb-0 mb-sm-3">
            <div class="card h-100">
                <h4 class="card-title card-header">{{ 'fal pencil-alt'|icon(null, 18, 'info-darken me-2 float-start') }}{{ "Contactez-nous"|trans }}</h4>
                <div class="card-body pb-0">
                    {{ form_start(form, {attr: {id: "contact-form", action: app.request.uri, novalidate: "novalidate"}}) }}
                        <div class="row">
                            {{ form_row(form.name) }}
                            {{ form_row(form.phone) }}
                            {{ form_row(form.email) }}
                            {{ form_row(form.message) }}
                            <div class="col-12">
                                {{ form_row(form.submit) }}
                            </div>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>

        <div class="col-12 mb-4 d-none d-sm-block">
            <a href="{{ asset('build/admin/docs/notice-cms-agence-felix.pdf') }}"
               id="download-notice"
               class="w-100 text-center d-inline-block"
               download="notice-cms-agence-felix.pdf">
                {{ 'fal file-pdf'|icon(null, 42, 'dark me-2 mb-3') }}
                <br>{{ "Télécharger la notice"|trans }}
            </a>
        </div>

    </div>


{% endblock %}