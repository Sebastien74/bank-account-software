{% trans_default_domain 'admin' %}

{% if 'map'|moduleActive(configuration) or granted('ROLE_INTERNAL') %}
    {% set uri = app.request.uri %}
    {% set active = '/maps/' in uri %}
    {% set module = 'map'|moduleActive(configuration) %}
    {% set intl = intlsModules['map'][app.user.locale] is defined ? intlsModules['map'][app.user.locale] : intlsModules['map']['fr'] %}
    {% set title = intl.placeholder is defined and intl.placeholder|striptags|length > 0 ? intl.placeholder : (intlsModules['map']['entity'].adminName is defined ? intlsModules['map']['entity'].adminName : 'Cartes'|trans) %}
    {% set icon = intlsModules['map']['entity'].iconClass is defined and intlsModules['map']['entity'].iconClass ? intlsModules['map']['entity'].iconClass : '/medias/icons/light/newspaper.svg' %}
    <li{% if active %} class="active"{% endif %}>
        <a class="as-arrow{% if pageTag == 'maps' %} active{% endif %}" href="javascript:void(0)" aria-expanded="false">
            {{ icon|icon(17, 15, 'white me-3', {icon: true}) }}{{ title|raw }}
        </a>
        <ul aria-expanded="false" class="collapse{% if pageTag == 'maps' %} in{% endif %}">
            <li>
                <a href="{{ path('admin_map_index', {website: websiteId}) }}" data-toggle="preloader">{{ "Liste des cartes"|trans }}</a>
            </li>
            <li>
                <a href="{{ path('admin_mapcategory_index', {website: websiteId}) }}" {% if '/maps/categories/' in uri %} class="active"{% endif %} data-toggle="preloader">{{ "Liste des cat√©gories de points"|trans }}</a>
            </li>
        </ul>
    </li>
{% endif %}