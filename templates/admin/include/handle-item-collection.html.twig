         class="btn btn-white handle-item-prototype cursor"
         data-path="{{ path(routeName, {website: websiteId(), (interfaceName): entityId}) }}"
         data-position="{{ position }}">
        <span data-bs-toggle="tooltip" title="{{ "DÃ©placer"|trans|raw }}">
            {{ 'far arrows-alt'|icon(17, 14, 'info') }}
        </span>
