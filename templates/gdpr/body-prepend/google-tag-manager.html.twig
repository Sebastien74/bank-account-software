{% set website = website is defined and website ? website : website() %}
{% set noCookiesActive = true %}
{% set tagManagerKey = website.api.google.tagManagerKey is defined ? website.api.google.tagManagerKey : null %}
{% set display = (tagManagerKey and status) or (tagManagerKey and noCookiesActive) %}

{% if display %}
    <!-- Google Tag Manager (noscript) -->
    <noscript class="analytics-script" nonce="{{ csp_nonce() }}">
        <iframe src="https://www.googletagmanager.com/ns.html?id={{ website.api.google.tagManagerKey }}"
                height="0" width="0" style="display:none; visibility:hidden"></iframe>
    </noscript>
{% endif %}