{% set website = website is defined and website ? website : website() %}

{% if website.api.google.analyticsUa is defined and website.api.google.analyticsUa %}

    {% set UA = website.api.google.analyticsUa %}
    {% set isUAGtag = UA|slice(0, 2)|lower == 'g-' %}

    <!--  Google Analytics -->
    <script class="analytics-script" nonce="{{ csp_nonce() }}">
        function gtag(){dataLayer.push(arguments);}
        {% if isUAGtag %}
            let script = document.createElement('script');
            script.type = 'text/javascript';
            script.src = 'https://www.googletagmanager.com/gtag/js?id={{ UA }}';
            document.getElementsByTagName('head')[0].appendChild(script);
            window.dataLayer = window.dataLayer || [];
            {% if not status %}
                gtag('set', 'anonymizeIp', true);
            {% endif %}
            gtag('js', new Date());
            gtag('config', '{{ UA }}');
        {% else %}
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function() {
                (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
            {% if not status %}
                gtag('set', 'anonymizeIp', true);
            {% endif %}
            gtag('create', '{{ UA }}', 'auto');
            gtag('send', 'pageview')
        {% endif %}
    </script>

{% endif %}