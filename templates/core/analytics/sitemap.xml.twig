<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="https://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:xhtml="https://www.w3.org/1999/xhtml">
    {% for mainLocale, localesGroups in xml %}
        {% if mainLocale == defaultLocal %}
            {% for key, urlsGroups in localesGroups %}
                {% set isInfill = false %}
                {% for locale, url in urlsGroups %}
                    {% set isInfill = url.entity.infill is defined and url.entity.infill %}
                {% endfor %}
                {% if not isInfill %}
                    <url>
                        {% for locale, url in urlsGroups %}
                            {% if loop.first %}
                                <loc>{{ url.url }}</loc>
                                {% if url.update is defined and url.update %}
                                    <lastmod>{{ url.update|date('Y-m-d') }}</lastmod>
                                {% endif %}
                            {% else %}
                                <xhtml:link rel="alternate" hreflang="{{ locale|canonicalizeLocale }}" href="{{ url.url }}"/>
                            {% endif %}
                        {% endfor %}
                    </url>
                {% endif %}
            {% endfor %}
        {% endif %}
    {% endfor %}
</urlset>