{% trans_default_domain 'front_default' %}

{% if haveContent %}
    {% set noMarginChars = ['%'] %}
    {% set suffixHaveMargin = intl.slug|striptags not in noMarginChars %}
    {% set style = style ? style~' initial' : 'initial' %}
    {% set fullWidth = fullWidth is defined ? fullWidth : true %}
    {% set colorInText = colorInText is defined ? colorInText : false %}
    <div class="counter-block d-flex justify-content-center text-center{% if fullWidth %} w-100{% endif %}">
        <div class="mb-4 mb-md-0">
            {% if icon %}
                {% include 'front/'~websiteTemplate~'/blocks/icon/default.html.twig' with {
                    block: block,
                    class: 'mb-3'
                } only %}
            {% endif %}
            <div class="content d-flex w-100 justify-content-center">
                {% if intl.placeholder %}
                    <span class="fw-700 me-2 {{ style }}">{{ intl.placeholder|raw }}</span>
                {% endif %}
                <span id="counter-block-{{ block.id }}"
                      class="counter-animation fw-700 {{ style }}"
                      data-component="counter"
                      data-counter-start="0"
                      data-counter-end="{% if intl.title|striptags|length > 0 %}{{ intl.title|raw }}{% endif %}"
                      data-counter-time="2000"
                      data-counter-delay="80"><span class="value-text-noscript {{ style }}">0</span></span>
                {% if intl.slug %}
                    <span class="fw-700 {{ style }}{% if suffixHaveMargin %} ms-2{% endif %}">{{ intl.slug|raw }}</span>
                {% endif %}
            </div>
            {% if intl.body %}
                <div class="body{% if colorInText %} {{ style }}{% endif %}">{{ intl.body|replace({'<p>': '<p class="initial-color fw-100">'})|raw }}</div>
            {% endif %}
        </div>
    </div>
{% endif %}