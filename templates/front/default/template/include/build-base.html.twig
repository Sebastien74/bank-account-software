{% trans_default_domain 'front_default' %}

{% block body %}
    <div id="{{ theme }}-theme" class="row">
        <div class="left col-lg-6 col-xl-5 column d-flex align-items-center justify-content-center bg-white">
            <div class="d-flex flex-wrap flex-column h-100 w-100">
                <div class="content my-auto py-5">
                    <div id="header" class="text-center">
                        {% set screen = isMobile() ? 'xs' : (isTablet() ? 'md' : 'lg') %}
                        {% set config = {xs: {width: null, height: 180}, md: {width: null, height: 180}, lg: {width: null, height: 180}} %}
                        {{ asset(logoPath)|file({}, {
                            width: config[screen]['width'],
                            height: config[screen]['height'],
                            title: companyName,
                            id: 'in-build-logo',
                            class: 'force-size initial-color',
                            only_html: false,
                            lazyLoad: true}) }} <br>
                        <h1 class="text-uppercase mt-4 mb-4 mt-md-5 mb-md-5">{{ "Site en construction"|trans|raw }}</h1>
                    </div>
                    {% if networks %}
                        <div class="networks d-flex justify-content-center text-center">
                            <div class="inner">
                                <strong class="d-inline-block w-100 mb-3">{{ "En attendant retrouvez-nous sur&nbsp;:"|trans|raw }}</strong>
                                <ul id="contact-info" class="reset p-0 m-0 d-inline-flex">
                                    {% for network in networks %}
                                        {% if network.link is defined and network.link %}
                                            <li class="d-inline-flex{% if not loop.last %} me-3{% endif %}">
                                                <a href="{{ network.link }}"
                                                   target="_blank"
                                                   rel="noopener noreferrer"
                                                   title="{{ network.title }}"
                                                   aria-label="{{ network.title }}"
                                                   class="d-flex align-items-center justify-content-center">
                                                    {{ ('cms '~network.title|lower)|icon(35, 35, 'dark initial') }}
                                                </a>
                                            </li>
                                        {% endif %}
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                    {% endif %}
                    {% if addresses or havePhones or haveEmails %}
                        <div id="support-info" class="text-center mt-5">
                            {% for address in addresses %}
                                <address class="address{% if havePhones or haveEmails %} mb-0{% endif %}">
                                    {% if address.name is defined and address.name %}
                                        <strong class="name">{{ address.name|raw }}</strong>
                                    {% endif %}
                                    {% if address.address is defined and address.address %}
                                        <div class="address">{{ address.address|raw }}</div>
                                    {% endif %}
                                    {% if address.zipCode is defined and address.zipCode %}
                                        <span class="zip-code">{{ address.zipCode|raw }}</span>
                                    {% endif %}
                                    {% if address.city is defined and address.city %}
                                        <span class="dash"> - </span>
                                        <span class="city">{{ address.city|raw }}</span>
                                    {% endif %}
                                    {% if address.department is defined and address.department %}
                                        <br>
                                        <span class="department">{{ address.department|raw }}</span>
                                    {% endif %}
                                    {% if address.region is defined and address.region %}
                                        <span class="dash"> - </span>
                                        <span class="region">{{ address.region|raw }}</span>
                                    {% endif %}
                                    {% if address.phones is defined and address.phones|length > 0 %}
                                        <ul class="reset phones">
                                            {% for phone in address.phones %}
                                                <li>{{ phone|phone(website, {icon: false, only_href: true}) }}</li>
                                            {% endfor %}
                                        </ul>
                                    {% endif %}
                                    {% if address.emails is defined and address.emails|length > 0 %}
                                        <ul class="reset emails">
                                            {% for email in address.emails %}
                                                <li>{{ email.email|email(website, {icon: false, only_href: true}) }}</li>
                                            {% endfor %}
                                        </ul>
                                    {% endif %}
                                </address>
                            {% endfor %}
                            {% if havePhones or haveEmails %}
                                <div class="mt-3">
                                    {% if havePhones %}
                                        <ul class="reset phones">
                                            {% for phone in phones %}
                                                <li>{{ phone|phone(website, {icon: false, only_href: true}) }}</li>
                                            {% endfor %}
                                        </ul>
                                    {% endif %}
                                    {% if haveEmails %}
                                        <ul class="reset phones">
                                            {% for email in emails %}
                                                <li>{{ email.email|email(website, {icon: false, only_href: true}) }}</li>
                                            {% endfor %}
                                        </ul>
                                    {% endif %}
                                </div>
                            {% endif %}
                        </div>
                    {% endif %}
                </div>
{#                <div class="mt-auto py-3 px-3">#}
{#                    @agence felix#}
{#                </div>#}
            </div>
        </div>
        <div class="right col-md-6 col-xl-7 px-0 column d-none d-lg-block"{% if backgroundPath %} style="background: url({{ backgroundPath }})"{% endif %}>
            <div class="inner w-100 h-100"></div>
        </div>
    </div>
{% endblock %}