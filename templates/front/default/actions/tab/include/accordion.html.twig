{% trans_default_domain 'front_default' %}

{% import 'front/'~websiteTemplate~'/actions/tab/macro.html.twig' as macro %}

<div class="accordion" id="accordion-tab-module-{{ tab.id }}">
    {% for tabItem in tabs %}
        {% set tabContent = tabItem.entity %}
        <div class="accordion-item{% if not loop.last %} mb-4{% endif %}">
            <h3 class="mb-0">
                <button class="accordion-header accordion-button collapsed cursor d-flex mb-0" type="button"  data-bs-toggle="collapse" data-bs-target="#accordion-collapse-{{ tab.id~'-'~tabContent.id }}" aria-expanded="false" aria-controls="accordion-collapse-{{ tab.id~'-'~tabContent.id }}">
                    {% if tabContent.intl.title %}
                        <span class="d-inline-block pe-3">{{ tabContent.intl.title|raw }}</span>
                    {% endif %}
                    <i class="icon-plus-circle ms-auto"></i>
                </button>
            </h3>
            <div id="accordion-collapse-{{ tab.id~'-'~tabContent.id }}" class="accordion-collapse collapse" data-bs-parent="#accordion-tab-module-{{ tabContent.id }}">
                <div class="accordion-body">
                    {% if tabContent.haveMainMedia %}
                        {{ tabContent.mainMedia|file(thumbConfiguration) }}
                    {% endif %}
                    {{ macro.content(tabContent, websiteTemplate, 4) }}
                </div>
            </div>
        </div>
    {% endfor %}
</div>