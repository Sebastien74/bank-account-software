{% trans_default_domain 'front_default' %}

{% import 'front/'~websiteTemplate~'/actions/tab/macro.html.twig' as macro %}

<div class="d-flex align-items-start">
    <div class="row w-100">
        <div class="col-md-4">
            <div class="nav flex-column nav-pills me-3" id="v-pills-tab-{{ tab.id }}"
                 role="tablist"
                 aria-orientation="vertical">
                {% set active = true %}
                {% for tabItem in tabs %}
                    {% set tabContent = tabItem.entity %}
                    {% if tabContent.intl.title or tabContent.pictogram %}
                        <button class="nav-link text-start cursor w-100{% if active %} active{% endif %}"
                                id="v-pills-tab-{{  tab.id~'-'~tabContent.id }}"
                                data-bs-toggle="pill"
                                data-bs-target="#v-pills-tab-content-{{  tab.id~'-'~tabContent.id }}"
                                role="tab"
                                aria-controls="v-pills-tab-content-{{  tab.id~'-'~tabContent.id }}"
                                aria-selected="{% if active %}true{% else %}false{% endif %}"
                                tabindex="{% if active %}0{% else %}-1{% endif %}">
                            {% if tabContent.pictogram %}
                                <div class="pictogram me-4 d-inline-block">
                                    {{ tabContent.pictogram|icon(null, 65) }}
                                </div>
                            {% endif %}
                            {% if tabContent.intl.title %}
                                <div class="d-inline-block">
                                    {{ tabContent.intl.title|raw }}
                                </div>
                            {% endif %}
                        </button>
                        {% set active = false %}
                    {% endif %}
                {% endfor %}
            </div>
        </div>
        <div class="col-md-8">
            <div class="tab-content" id="v-pills-tab-content-{{ tab.id }}">
                {% set active = true %}
                {% for tabItem in tabs %}
                    {% set tabContent = tabItem.entity %}
                    <div class="tab-pane fade{% if active %} show active{% endif %}"
                         id="v-pills-tab-content-{{  tab.id~'-'~tabContent.id }}"
                         aria-hidden="{% if active %}false{% else %}true{% endif %}"
                         role="tabpanel"
                         tabindex="{% if active %}0{% else %}-1{% endif %}"
                         aria-labelledby="v-pills-tab-{{  tab.id~'-'~tabContent.id }}">
                        {% if tabContent.haveMainMedia %}
                            {{ tabContent.mainMedia|file(thumbConfiguration) }}
                        {% endif %}
                        {{ macro.content(tabContent, websiteTemplate, 3) }}
                    </div>
                    {% set active = false %}
                {% endfor %}
            </div>
        </div>
    </div>
</div>