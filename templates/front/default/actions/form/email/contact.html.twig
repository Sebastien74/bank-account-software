{% extends 'core/email/base.html.twig' %}

{% trans_default_domain 'email' %}

{% block body %}
    <tr>
        <td align="center" bgcolor="#ffffff" style="padding: 24px; font-family: 'Source Sans Pro', Helvetica, Arial, sans-serif; font-size: 16px; line-height: 24px;">
            {% for fieldKey, field in fields %}
                {% set label = field.label ? field.label : fieldKey %}
                {% set display = true %}
                {% if not field.valueIntl|isArray and not field.valueIntl %}
                    {% set display = false %}
                {% endif %}
                {% if not isUploadedFile(field.valueIntl) and display %}
                    <p style="font-size: 14px;">
                        <strong>{{ label|raw }} :</strong>
                        {% if field.valueIntl|isArray and field.valueIntl|length == 1 %}
                            {% include 'core/data-formater.html.twig' with {dataValue: field.valueIntl[0]} %}
                        {% elseif field.valueIntl|isArray %}
                            {% for value in field.valueIntl %}
                                {% include 'core/data-formater.html.twig' with {dataValue: value} only %}
                            {% endfor %}
                        {% else %}
                            {% include 'core/data-formater.html.twig' with {dataValue: field.valueIntl, span: true} only %}
                        {% endif %}
                    </p>
                {% endif %}
            {% endfor %}
            {% if attachments is defined and attachments|length > 0 %}
                <p style="font-size: 14px;">
                    <strong>{{ "Pi√®ces jointes"|trans }} :</strong>  {{ attachments|length }}
                </p>
            {% endif %}
{#            <img src="{{ email.image('@images/medias/email/pixel.png')~'?classname='~classname|url_encode~'&code='~entityId }}" alt="Image" />#}
        </td>
    </tr>
{% endblock %}