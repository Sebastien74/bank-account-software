{% extends 'front/'~website.configuration.template~'/base.html.twig' %}

{% trans_default_domain 'front_default' %}

{% block metaTitle %}{{ "Inscrivez-vous"|trans|htmlEntities }}{% endblock %}
{% block metaDescription %}{{ "Inscrivez-vous"|trans }}{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('front-'~websiteTemplate~'-security', null, webpack) }}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('front-'~websiteTemplate~'-security', null, webpack, {defer: true}) }}
{% endblock %}

{% block body %}
    {% include 'front/'~websiteTemplate~'/blocks/title-header/default.html.twig' with {
        pageTitle: "Inscrivez-vous"|trans,
        thumbConfiguration: thumbConfigurationHeader
    } %}
    <div class="container-fluid mt-5 mb-5 form-security-container">
        <div class="row d-flex">
            <div class="col-md-4 mx-auto recaptcha-referer">
                {% if app.user %}
                    {% include 'front/'~websiteTemplate~'/include/alert.html.twig' with {alert: 'info', message: "Vous êtes déjà connecté."|trans} only %}
                {% else %}
                    {{ form_start(form, {attr: {id: "user-registration-form", novalidate: "novalidate", class: "security"}}) }}
                        <div class="row">
                            {% for field in form.children %}
                                {{ form_row(form[field.vars.name]) }}
                                {% if field.vars.name == 'plainPassword' %}
                                    <div class="form-group col-12">
                                        <small class="form-text text-muted">
                                            {{ "Le mot de passe doit comporter au moins 8 caractères, contenir au moins un chiffre, une majuscule et une minuscule."|trans|raw }}
                                        </small>
                                    </div>
                                {% endif %}
                            {% endfor %}
                            {% include "security/includes/recaptcha-fields.html.twig" %}
                        </div>
                        {% include "front/"~websiteTemplate~"/include/flashbag.html.twig" %}
                        <button id="submit" name="submit" type="submit" class="btn btn-primary btn-block text-uppercase">{{ "S'inscrire"|trans }}</button>
                    {{ form_end(form) }}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}